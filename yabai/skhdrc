
# Open terminal.
# cmd - return : sh ~/dotfiles/yabai/open_iterm.sh
# Use kitty terminal emulator
# cmd - return : kitty --single-instance
cmd - return : kitty

# Reload yabai configuration file
cmd + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# float / unfloat window and center on screen
# cmd + alt - f : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6

cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
cmd + shift - 5 : yabai -m window --space 5
cmd + shift - 6 : yabai -m window --space 6

cmd - h : yabai -m window --focus east
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus west

cmd + alt - h : yabai -m space --focus prev
cmd + alt - l : yabai -m space --focus next

# keycode 0x18 is '=' key
cmd + shift - 0x18 : yabai -m space --balance


